{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "A fast-loading static portfolio website built with vanilla JS, HTML, and SCSS",
  "type": "module",
  "main": "src/scripts/app.js",
  "scripts": {
    "build": "npm run build:clean && npm run build:styles && npm run build:copy",
    "build:clean": "rm -rf dist && mkdir -p dist",
    "build:styles": "sass src/styles/styles.scss dist/styles.css --style=compressed",
    "build:copy": "cp -r src/pages/* dist/ && cp -r src/scripts dist/ && cp -r src/translations dist/",
    "watch": "sass src/styles/styles.scss dist/styles.css --watch",
    "serve": "npx live-server dist",
    "dev": "npm run build && npm run watch & npm run serve",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:scss": "prettier --write \"src/**/*.scss\"",
    "format:js": "prettier --write \"src/**/*.js\" \"scripts/**/*.js\"",
    "format:html": "prettier --write \"src/**/*.html\""
  },
  "keywords": [
    "portfolio",
    "static-site",
    "scss",
    "vanilla-js"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "sass": "^1.69.5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2"
  }
}
