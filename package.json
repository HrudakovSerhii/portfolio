{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "A fast-loading static portfolio website built with vanilla JS, HTML, and SCSS",
  "type": "module",
  "main": "src/scripts/app.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve:prod": "node server.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:scss": "prettier --write \"src/**/*.scss\"",
    "format:js": "prettier --write \"src/**/*.js\" \"scripts/**/*.js\"",
    "format:html": "prettier --write \"src/**/*.html\""
  },
  "keywords": [
    "portfolio",
    "static-site",
    "scss",
    "vanilla-js"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "express": "^4.21.2",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.2",
    "sass": "^1.94.2",
    "terser": "^5.44.1",
    "vite": "^5.2.14",
    "vitest": "^4.0.7"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.7.6",
    "@mlc-ai/web-llm": "^0.2.46",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@xenova/transformers": "^2.17.2"
  }
}
